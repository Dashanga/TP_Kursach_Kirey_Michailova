@using BeautyViewWeb.Controllers
@model IEnumerable<BeautyServiceDAL.ViewModels.ServiceViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
@Html.ValidationSummary(true)
<p>
    @Html.ActionLink("Create New", "Index", "Service")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ServiceId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ServiceName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ServiceId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ServiceName)
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id=item.ServiceId})
        </td>
    </tr>
}

</table>
